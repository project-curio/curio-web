{
  "name": "curio-web",
  "version": "1.0.0",
  "description": "Curio front-end MVP static prototype.",
  "private": true,
  "scripts": {
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "serve:test": "http-server -p 8080 -c-1 .",
    "a11y:run": "pa11y-ci --config pa11yci.json",
    "a11y": "start-server-and-test serve:test http://localhost:8080 a11y:run",
    "stage1:validate": "npm run lint:html && npm run a11y",
    "stage6:validate": "npm run lint && npm run a11y"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "pa11y-ci": "3.1.0",
    "start-server-and-test": "^2.0.3",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
